// Define a schema for serializing Dataframes in Flatbuffers.

// union not used as vector of union not possible

namespace DataFrame;

enum ValueType: byte {
  Int,
  Float,
  String
}

table Metadata {
  name: string;
  dtype: ValueType;
}

table Column {
  metadata: Metadata;
  int_values: [int64];
  float_values: [float64];
  string_values: [string];
}

table DataFrame {
  metadata: string;
  columns: [Column];
}

root_type DataFrame;


