// Define a schema for serializing Dataframes in Flatbuffers.

namespace Project.DataFrame;

table DataFrame {
  metadata: string;
  columns: [Column];
}

table Metadata {
  name: string;
  dtype: ValueType;
}

table Column {
  metadata: Metadata;
  int_values: [int64];
  float_values: [float64];
  string_values: [string];
}

enum ValueType: byte {
  Int,
  Float,
  String
}

enum DataType: byte {
  Int64 = 0,
  Float,
  String
}

root_type DataFrame;


